<section class="container my-2 mx-auto border border-2 p-4 bg-light">
  <h2>Editar Livro</h2>
  <hr />
  <form action="/produtos/atualizar" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_id" value="{{ produto._id }}">
    <div class="form-group mb-3 w-50">
      <label for="name">Nome*</label>
      <input type="text" name="name" id="name" class="form-control" value="{{ produto.name }}" required />
    </div>
    <div class="form-group mb-3 w-50">
      <label for="price">Preço*</label>
      <input
        type="number"
        name="price"
        id="price"
        value="{{ produto.price }}"
        class="form-control"
        step=".1"
        required
      />
    </div>
    <div class="form-group mb-3 w-50">
      <label for="description">Descrição*</label>
      <textarea
        name="description"
        id="description"
        rows="10"
        class="form-control"
        required
      >{{ produto.description }}</textarea>
    </div>
    <div class="form-group mb-3 w-50">
      <label for="quantity">Quantidade*</label>
      <input
        type="number"
        name="quantity"
        id="quantity"
        value="{{ produto.quantity }}"
        class="form-control"
        required
      />
    </div>
        <div class="form-group">
      <label for="image">Imagem do Produto *</label>
      <input type="file" name="image" id="imagem" class="form-control" />
    </div>

    <button class="btn btn-dark mt-2">Atualizar</button>
  </form>
</section>