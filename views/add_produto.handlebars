<section class="container my-2 mx-auto border border-2 p-4 bg-light">
  <h2>Adicionar Livro</h2>
  <hr />
  <form class="my-4 mx-auto" action="/produtos/enviar" method="POST" enctype="multipart/form-data">
  <div class="form-group mb-3 w-50">
    <label for="name">Nome *</label>
    <input type="text" name="name" id="name" class="form-control" required />
  </div>
  <div class="form-group mb-3 w-50">
    <label for="description">Descrição *</label>
    <textarea
      name="description"
      id="description"
      rows="7"
      class="form-control"
      required
    ></textarea>
  </div>
  <div class="form-group mb-3 w-25">
    <label for="price">Preço *</label>
    <input
      type="number"
      name="price"
      id="price"
      class="form-control"
      step=".1"
      required
    />
  </div>
  
  <div class="form-group mb-3 w-25">
    <label for="kind">Tipo *</label>
    <select id="kind" class="form-control" name="kind" required>
        <option value="">Escolha uma opção</option>
        <option value="ebook">Ebook</option>
        <option value="fisico">Físico</option>
    </select>
  </div>
  <div class="form-group mb-3 w-25">
    <label for="quantity">Quantidade *</label>
    <input
      type="number"
      name="quantity"
      id="quantity"
      class="form-control"
      required
    />
    <div class="form-group">
      <label for="image">Imagem do Produto *</label>
      <input type="file" name="image" id="imagem" class="form-control" />
    </div>
  </div>
  <button class="btn btn-dark mt-2">Criar</button>
</form>
</section>