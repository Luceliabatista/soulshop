<section class="mx-3">
    <a href="/cupons/novo" class="btn btn-dark">
        <i class="bi bi-plus"></i>
        Criar Cupom
    </a>
    <hr/>
    <form method="GET" class="width-coupon">
        <input class="form-control form-control-sm" type="search" 
        name="nomeCupom" placeholder="Nome do cupom" value="{{ nomeCupom }}" />
        <button class="width-coupon mt-2 btn btn-sm btn-dark">
            <i class="bi bi-search"></i>
            Buscar
        </button>
    </form>
    <div class="container">
        <div class="row align-items-center">
            {{#each cupons}}
            <div class="mx-auto col-xl-3 col-lg-3 col-md-6 col-sm-6">
                <div class="card bg-dark mt-3 py-2 text-light mb-3 text-center"> 
                    <div class="card-body">
                        <h5 class="text-warning">Cupom</h5>
                        <p>{{this.title}}</p>
                        <h5 class="text-warning">CÃ³digo</h5>
                        <p>{{this.code}}</p>
                        <h5 class="text-warning">Categoria</h5>
                        <p>{{this.category}}</p>
                        <h5 class="text-warning">Validade</h5>
                        <p>{{this.expDate}}</p>
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="/cupons/editar/{{ this._id }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div>
                                <form name="deletarForm" method="POST" action="/cupons/deletar">
                                    <input type="hidden" name="_id" value="{{ this._id }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>



